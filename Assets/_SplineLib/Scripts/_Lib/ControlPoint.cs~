using System;
using UnityEngine;

public struct ControlPoint
{
	public Vector3 position;
	public Vector3 tangent;
	public float time;
	
	/*// used for the curve a*t^3+b*t^2+c*t+d
	public float a;
	public float b;
	public float c;
	public float d;
	*/
	
	public ControlPoint (Vector3 position, Vector3 tangent, float time)
	{
		this.position = position;
		this.tangent = tangent;
		this.time = time;
	}
}